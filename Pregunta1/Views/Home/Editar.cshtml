@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Editar Producto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Editar Producto</h4>
            </div>
            <div class="card-body">
                @if (ViewBag.Producto != null)
                {
                    <form method="post">
                        <input type="hidden" name="ID" value="@ViewBag.Producto.ID" />

                        <div class="mb-3">
                            <label for="Codigo_inventario" class="form-label">Código Inventario</label>
                            <input type="text" name="Codigo_inventario" value="@ViewBag.Producto.Codigo_inventario" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label for="Descripcion" class="form-label">Descripción</label>
                            <input type="text" name="Descripcion" value="@ViewBag.Producto.Descripcion" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label for="Precio" class="form-label">Precio</label>
                            <input type="text" name="Precio" value="@ViewBag.Producto.Precio" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label for="Stock" class="form-label">Stock</label>
                            <input type="number" min="0" name="Stock" value="@ViewBag.Producto.Stock" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label for="Categoria" class="form-label">Categoría</label>
                            <select id="Categoria" name="Categoria" class="form-select">
                                @if (ViewBag.Categorias != null)
                                {
                                    foreach (Pregunta1.Models.Categoria categoria in ViewBag.Categorias)
                                    {
                                        <option value="@categoria.ID" @(categoria.Nombre == ViewBag.Producto.Categoria ? "selected" : "")>
                                            @categoria.Nombre
                                        </option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Guardar Cambios</button>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Volver</a>
                        </div>
                    </form>
                }

                @if (ViewBag.ProductoActualizado == true)
                {
                    <div class="alert alert-success text-center mt-3">
                        <strong>¡Producto actualizado correctamente!</strong>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
