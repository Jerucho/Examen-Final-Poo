@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ranking de Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="card shadow-sm p-4">
            <h4 class="card-title text-center mb-3">Ranking de Productos</h4>

            <form method="post" class="mb-4">
                <div class="row g-2">
                    <div class="col-md-6">
                        <input type="number" name="Cantidad" placeholder="Cantidad mínima" min="0" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary w-100">Buscar</button>
                    </div>
                </div>
            </form>

            @if (ViewBag.Productos != null)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Descripción</th>
                                <th>Total Cantidad</th>
                                <th>Ranking</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Pregunta1.Models.RankingProducto producto in ViewBag.Productos)
                            {
                                <tr>
                                    <td>@producto.ID</td>
                                    <td>@producto.Descripcion</td>
                                    <td>@producto.TotalCantidad</td>
                                    <td>@producto.Ranking</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-center text-muted">No hay productos en el ranking.</p>
            }

            <div class="text-center mt-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
